# Docker environment configuration for testing
# Copy required values from your main .env file

# Required by automod
DID=your_did_here
OZONE_URL=https://your-ozone.example.com
OZONE_PDS=https://your-pds.example.com
BSKY_HANDLE=your.handle.bsky.social
BSKY_PASSWORD=your_password_here

# Optional configuration
FIREHOSE_URL=wss://jetstream1.us-west.bsky.network/subscribe
LOG_LEVEL=debug

# Label deduplication settings
ENABLE_LABEL_DEDUP=true
ENABLE_LABEL_SYNC=false
DATABASE_POOL_SIZE=10

# Ozone label sync (if enabling sync)
OZONE_LABEL_STREAM_URL=wss://ozone.skywatch.blue/xrpc/com.atproto.label.subscribeLabels
OZONE_RECONNECT_MAX_ATTEMPTS=5
OZONE_RECONNECT_DELAY_MS=1000